#------------------------------------------------------------------------------
# poaste to mozillapaste
mozpaste () {
    PASTE_DATA=""
    while read input; do 
        if [[ $PASTE_DATA == "" ]] ; then
            PASTE_DATA=$input
        else
            PASTE_DATA="$PASTE_DATA 
$input"
        fi
    done

    curl -i --data-urlencode "code2=$PASTE_DATA" -d "parent_pid=&format=text&poster=MeaCulpa&expiry=d&paste=Send" http://pastebin.mozilla.org/ -s \
        | egrep -o 'http.*' | tee >(xsel); }


